<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--开启驼峰命名-->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <!--定义别名-->
    <typeAliases>
        <package name="cn.edu.bupt.admin.model"/>
        <package name="cn.edu.bupt.user.dao"/>
        <package name="cn.edu.bupt.emailTemplate.model"/>
    </typeAliases>
    <!--mapper映射文件-->
    <mappers>
        <package name="mapper"/>
    </mappers>
</configuration>